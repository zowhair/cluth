                        {%- if block.settings.title != blank -%}
                          <div class="Page_quote_text_icon_list_allloop_innerbox_infos_new">
                            {{ block.settings.title }}
                          </div>
                        {%- endif -%}
                      </div>
                      {%- if block.settings.icons != blank -%}
                        <div class="Page_quote_text_icon_list_allloop_innerbox_icons_new">
                          {%- assign img_url = block.settings.icons | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                          <img class="Icon_image_new lazyload"
                            data-src="{{ img_url }}"
                            data-widths="[750, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                            data-aspectratio="{{ block.settings.icons.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ block.settings.icons.alt }}">
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
              {%- endfor -%}
            </div>
            <div class="custom_swipe_new">
              <div class="swiper-button-prev">
                <svg width="25" height="8" viewBox="0 0 25 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M0.646447 3.89645C0.451184 4.09171 0.451184 4.40829 0.646447 4.60355L3.82843 7.78553C4.02369 7.9808 4.34027 7.9808 4.53553 7.78553C4.7308 7.59027 4.7308 7.27369 4.53553 7.07843L1.70711 4.25L4.53553 1.42157C4.7308 1.22631 4.7308 0.909728 4.53553 0.714466C4.34027 0.519204 4.02369 0.519204 3.82843 0.714466L0.646447 3.89645ZM25 3.75L1 3.75V4.75L25 4.75V3.75Z" fill="white"/>
