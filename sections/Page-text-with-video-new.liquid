{%- if section.settings.main_heading_text != blank or section.settings.main_infos_text != blank or section.settings.vimeo_video_url != blank or section.settings.main_video_url != blank or section.settings.main_desktop_image != blank or section.settings.main_mobile_image != blank -%}
  <div class="Page_text_with_video_main_new Page_text_with_video_main_new_{{ section.id }}" style="background: {{ section.settings.main_back_color }};">
    <style>
      @media(min-width:0px) and (max-width:768px){
        .Page_text_with_video_main_new_{{ section.id }}{ background: {{ section.settings.main_mobile_back_color }} !important; } 
      }
    </style>
    <div class="page-width">
      <div class="Page_text_with_video_inner_new">
        {%- if section.settings.main_heading_text != blank -%}
          <div class="common_title_new Page_text_with_video_mobiletitle_new">
            <h2>{{ section.settings.main_heading_text }}</h2>
          </div>
        {%- endif -%}
        <div class="Page_text_with_video_mainleftright_new">
          <div class="Page_text_with_video_innerleftright_new">
            {%- if section.settings.main_heading_text != blank or section.settings.main_infos_text != blank -%}
              <div class="Page_text_with_video_mainleft_new">
                <div class="Page_text_with_video_innerleft_new">
                  {%- if section.settings.main_heading_text != blank -%}
                    <div class="common_title_new Page_text_with_video_innerleft_desktoptitle_new">
                      <h2>{{ section.settings.main_heading_text }}</h2>
                    </div>
                  {%- endif -%}
                  {%- if section.settings.main_infos_text != blank -%}
                    <div class="Page_text_with_video_innerleft_infos_new">
                      {{ section.settings.main_infos_text }}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
            {%- if section.settings.vimeo_video_url != blank or section.settings.main_video_url != blank or section.settings.main_desktop_image != blank or section.settings.main_mobile_image != blank -%}
              <div class="Page_text_with_video_mainright_new">
                <div class="Page_text_with_video_innerright_new">
                  {%- if section.settings.vimeo_video_url != blank -%}
                    <div class="Page_videos_images_slider_innerloop_innerbox_videoimage_new">
                      <iframe src="https://player.vimeo.com/video/{{ section.settings.vimeo_video_url.id }}" width="287" height="512" frameborder="0" allowfullscreen></iframe>
                    </div>
                  {%- elsif section.settings.main_video_url != blank -%}
                    <div class="Page_videos_images_slider_innerloop_innerbox_videoimage_new mp4_play_video_new">
                      <div class="play_video_new">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <g clip-path="url(#clip0_1_1411)">
                          <path d="M12 0C5.383 0 0 5.383 0 12C0 18.617 5.383 24 12 24C18.617 24 24 18.617 24 12C24 5.383 18.617 0 12 0ZM9.765 16.5219C9.43197 16.73 9 16.4906 9 16.0979V7.90212C9 7.50941 9.43198 7.26998 9.765 7.47812L16.3216 11.576C16.6349 11.7718 16.6349 12.2282 16.3216 12.424L9.765 16.5219Z" fill="white"/>
                          </g>
                          <defs>
                          <clipPath id="clip0_1_1411">
                          <rect width="24" height="24" fill="white"/>
                          </clipPath>
                          </defs>
                        </svg>
                      </div>
                      {{ section.settings.main_video_url | video_tag: image_size: '600x', controls: false, autoplay: false, loop: true }}
                    </div>
                  {%- else -%}  
                    {%- if section.settings.main_desktop_image != blank and section.settings.main_mobile_image != blank -%}
                      <div class="Page_videos_images_slider_innerloop_innerbox_videoimage_new">
                        {%- if section.settings.main_desktop_image != blank -%}
                          {%- assign img_url = section.settings.main_desktop_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                          <img class="desktop_image_new lazyload"
                            data-src="{{ img_url }}"
                            data-widths="[180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                            data-aspectratio="{{ section.settings.main_desktop_image.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ section.settings.main_desktop_image.alt }}">
                        {%- endif -%}
                        {%- if section.settings.main_mobile_image != blank -%}
                          {%- assign img_url = section.settings.main_mobile_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                          <img class="mobile_image_new lazyload"
                            data-src="{{ img_url }}"
                            data-widths="[180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                            data-aspectratio="{{ section.settings.main_mobile_image.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ section.settings.main_mobile_image.alt }}">
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}  
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Page Text With Video",
    "class": "Page_text_with_video_new",
    "settings": [
      {
        "type": "color",
        "id": "main_back_color",
        "label": "Add Main Background Color",
        "default": "#141414"
      },
      {
        "type": "color",
        "id": "main_mobile_back_color",
        "label": "Add Main Mobile Background Color"
      },
      {
        "type": "textarea",
        "id": "main_heading_text",
        "label": "Add Main Heading Text",
        "default": "How it works"
      },
      {
        "type": "richtext",
        "id": "main_infos_text",
        "label": "Add Main Information Text",
        "default": "<p>It’s simple. When you’re running low, just plug in the built-in cable, stick to the back of your phone and get to green in no time.</p>"
      },
      {
        "type": "video_url",
        "id": "vimeo_video_url",
        "label": "Add Vimeo Video Url",
        "info": "EX: https://vimeo.com/794623657",
        "accept": ["vimeo"]
      },
      {
        "type": "video",
        "id": "main_video_url",
        "label": "Add Main MP4 Video"
      },
      {
        "type": "image_picker",
        "id": "main_desktop_image",
        "label": "Add Main Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "main_mobile_image",
        "label": "Add Main Mobile Image"
      }
    ],
    "presets": [
      {
        "name": "Page Text With Video"
      }
    ]
  }
{% endschema %}