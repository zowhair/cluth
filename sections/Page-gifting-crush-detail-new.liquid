{%- if section.settings.main_heading_text != blank or section.settings.main_infos_text != blank or section.settings.main_title_text_3 != blank or section.settings.main_infos_text_3 != blank or section.settings.main_title_text_2 != blank or section.settings.main_infos_text_2 != blank or section.settings.main_title_text_1 != blank or section.settings.main_infos_text_1 != blank or section.settings.main_button_link != blank -%}
  <div class="Page_gifting_crush_detail_main_new" style="background: {{ section.settings.main_back_color }};">
    <div class="page-width">
      <div class="Page_gifting_crush_detail_inner_new">
        {%- if section.settings.main_heading_text != blank or section.settings.main_infos_text != blank -%}
          <div class="Page_gifting_crush_detail_1_new">
            {%- if section.settings.main_heading_text != blank -%}
              <div class="common_title_new Page_gifting_crush_detail_1_title_new">
                <h2>{{ section.settings.main_heading_text }}</h2>
              </div>
            {%- endif -%}
            {%- if section.settings.main_infos_text != blank -%}
              <div class="Page_gifting_crush_detail_1_infos_new">
                {{ section.settings.main_infos_text }}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
        {%- if section.settings.main_desktop_image != blank or section.settings.main_mobile_image != blank or section.settings.main_title_text_3 != blank or section.settings.main_infos_text_3 != blank or section.settings.main_title_text_2 != blank or section.settings.main_infos_text_2 != blank or section.settings.main_title_text_1 != blank or section.settings.main_infos_text_1 != blank -%}
