                    {%- if section.settings.main_desktop_image != blank -%}
                      {%- assign img_url = section.settings.main_desktop_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                      <img class="desktop_image_new lazyload"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-aspectratio="{{ section.settings.main_desktop_image.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.main_desktop_image.alt }}">
                    {%- endif -%}
                    {%- if section.settings.main_mobile_image != blank -%}
                      {%- assign img_url = section.settings.main_mobile_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                      <img class="mobile_image_new lazyload"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-aspectratio="{{ section.settings.main_mobile_image.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ section.settings.main_mobile_image.alt }}">
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
              {%- if section.settings.main_title_text_1 != blank or section.settings.main_infos_text_1 != blank -%}
                <div class="Page_gifting_crush_detail_2_infos_titletextsboth_new Page_gifting_crush_detail_2_infos_titletextsboth_1_new">
                  {%- if section.settings.main_title_text_1 != blank -%}
                    <div class="common_title_new Page_gifting_crush_detail_2_infos_title_new">
                      <h3>{{ section.settings.main_title_text_1 }}</h3>
                    </div>
                  {%- endif -%}
                  {%- if section.settings.main_infos_text_1 != blank -%}
                    <div class="Page_gifting_crush_detail_2_infos_texts_new">
                      {{ section.settings.main_infos_text_1 }}
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
              {%- if section.settings.main_title_text_2 != blank or section.settings.main_infos_text_2 != blank -%}
                <div class="Page_gifting_crush_detail_2_infos_titletextsboth_new Page_gifting_crush_detail_2_infos_titletextsboth_2_new">
                  {%- if section.settings.main_title_text_2 != blank -%}
                    <div class="common_title_new Page_gifting_crush_detail_2_infos_title_new">
                      <h3>{{ section.settings.main_title_text_2 }}</h3>
                    </div>
                  {%- endif -%}
                  {%- if section.settings.main_infos_text_2 != blank -%}
                    <div class="Page_gifting_crush_detail_2_infos_texts_new">
                      {{ section.settings.main_infos_text_2 }}
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
              {%- if section.settings.main_title_text_3 != blank or section.settings.main_infos_text_3 != blank -%}
                <div class="Page_gifting_crush_detail_2_infos_titletextsboth_new Page_gifting_crush_detail_2_infos_titletextsboth_3_new">
                  {%- if section.settings.main_title_text_3 != blank -%}
                    <div class="common_title_new Page_gifting_crush_detail_2_infos_title_new">
                      <h3>{{ section.settings.main_title_text_3 }}</h3>
                    </div>
                  {%- endif -%}
                  {%- if section.settings.main_infos_text_3 != blank -%}
                    <div class="Page_gifting_crush_detail_2_infos_texts_new">
                      {{ section.settings.main_infos_text_3 }}
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
        {%- if section.settings.main_button_text != blank and section.settings.main_button_link != blank -%}
          <div class="Page_gifting_crush_detail_3_new">
            <a href="{{ section.settings.main_button_link }}" class="btn btn_new">
              {{ section.settings.main_button_text }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}  

