{%- if section.settings.main_heading_text != blank or section.settings.main_mobile_image != blank or section.settings.main_button_link != blank or section.settings.main_desktop_image != blank -%}
  <div class="Page_text_btn_with_image_main_new" style="background: {{ section.settings.main_back_color }};">
    <div class="page-width">
      <div class="Page_text_btn_with_image_inner_new">
        <div class="Page_text_btn_with_image_leftrightboth_new">
          {%- if section.settings.main_heading_text != blank or section.settings.main_mobile_image != blank or section.settings.main_button_link != blank -%}
            <div class="Page_text_btn_with_image_mainleft_new">
              <div class="Page_text_btn_with_image_innerleft_new">
                {%- if section.settings.main_heading_text != blank -%}
                  <div class="common_title_new Page_text_btn_with_image_innerleft_infos_new">
                    <h2>{{ section.settings.main_heading_text }}</h2>
                  </div>
                {%- endif -%}
                {%- if section.settings.main_mobile_image != blank -%}
                  <div class="Page_text_btn_with_image_innerleft_image_new">
                    {%- assign img_url = section.settings.main_mobile_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    <img class="mobile_image_new lazyload"
                      data-src="{{ img_url }}"
                      data-widths="[180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                      data-aspectratio="{{ section.settings.main_mobile_image.aspect_ratio }}"
                      data-sizes="auto"
                      alt="{{ section.settings.main_mobile_image.alt }}">
                  </div>
                {%- endif -%}
                {%- if section.settings.main_button_text != blank and section.settings.main_button_link != blank -%}
                  <div class="Page_text_btn_with_image_innerleft_button_new">
                    <a href="{{ section.settings.main_button_link }}" class="btn btn_new">
                      {{ section.settings.main_button_text }}
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
          {%- if section.settings.main_desktop_image != blank -%}
            <div class="Page_text_btn_with_image_mainright_new">
              <div class="Page_text_btn_with_image_innerright_new">
                {%- assign img_url = section.settings.main_desktop_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                <img class="desktop_image_new lazyload"
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 750, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                  data-aspectratio="{{ section.settings.main_desktop_image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ section.settings.main_desktop_image.alt }}">
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}  

{% schema %}
  {
    "name": "Page Text Btn With Image",
    "class": "Page_text_btn_with_image_new",
    "settings": [
      {
        "type": "color",
        "id": "main_back_color",
        "label": "Add Main Background Color",
        "default": "#222222"
      },
      {
        "type": "image_picker",
        "id": "main_desktop_image",
        "label": "Add Main Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "main_mobile_image",
        "label": "Add Main Mobile Image"
      },
      {
        "type": "richtext",
        "id": "main_heading_text",
        "label": "Add Main Heading Text",
        "default": "<p>Still debating leaving your charger at home? Now you wonâ€™t have to.</p>"
      },
      {
        "type": "text",
        "id": "main_button_text",
        "label": "Add Main Button Text",
        "default": "Pick My Color"
      },
      {
        "type": "text",
        "id": "main_button_link",
        "label": "Add Main Button Link",
        "default": "#shop"
      }
    ],
    "presets": [
      {
        "name": "Page Text Btn With Image"
      }
    ]
  }
{% endschema %}