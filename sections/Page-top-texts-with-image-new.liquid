      {
        "type": "video",
        "id": "main_video_url",
        "label": "Add Main MP4 Video"
      },
      {
        "type": "image_picker",
        "id": "main_desktop_image",
        "label": "Add Main Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "main_mobile_image",
        "label": "Add Main Mobile Image"
      },
      {
        "type": "url",
        "id": "image_link",
        "label": "Add Image Link"
      }
    ],
    "presets": [
      {
        "name": "Page Top Texts With Image"
      }
    ]
  }
{% endschema %}